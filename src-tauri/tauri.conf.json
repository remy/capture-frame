{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "capture-frame",
  "version": "0.1.0",
  "identifier": "com.capture-frame.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "transparent": true,
        "decorations": true,
        "resizable": true,
        "fullscreen": false,
        "title": "Framed Window",
        "width": 800,
        "height": 600,
        "url": "frame.html",
        "label": "frame"
      },
      {
        "title": "Frame Configuration",
        "width": 256,
        "height": 200,
        "url": "index.html",
        "label": "main",
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
